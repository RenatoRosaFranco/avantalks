<%= provide :title, 'Entre ou cadastre-se' %>

<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class='text-center'>
                <%= image_tag('logo.jpeg', class: 'logo') %>
              </div>

              <h2 class='bold text-center'>Criar Conta</h2>
              <p class='text-center'>
                Crie uma conta no Avantalks | 
                <u class='bold'>Avantsoft</u></p>
              <hr />

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <%= f.label :name, 'Nome' %><br />
                  <%= f.email_field :name, autofocus: true, autocomplete: "Nome", class: 'form-control', required: 'required', placeholder: 'Digite o nome' %>
                </div>

                <div class="field">
                  <%= f.label :email, 'E-mail' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: 'form-control', required: 'required', placeholder: 'john.doe@avantsoft.com.br' %>
                </div>

                <div class="field">
                  <%= f.label :password, 'Senha' %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password",
                  class: 'form-control', required: 'required', placeholder: 'Digite a senha' %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, 'Confirma Senha' %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: 'form-control', required: 'required', placeholder: 'Confirme sua senha' %>
                </div>

                <div class="actions"><br />
                  <%= f.submit "Criar conta", class: 'btn btn-primary
                  btn-lg full-width avantBtn' %>
                </div>
              <% end %>

              <hr />
              <div class='text-center'>
                <p>
                  JÃ¡ possui uma conta?
                  <%= link_to 'Login', new_user_session_path, class: 'bold' %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
